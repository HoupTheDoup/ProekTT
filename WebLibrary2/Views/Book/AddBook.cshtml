@model WebLibrary.Web.Models.BookModels.BookCreateModel

@{
    ViewData["Title"] = "AddBook";
}

<h1>AddBook</h1>

<h4>BookCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control">
                   @foreach(var author in ViewBag.Authors)
                   {
                       <option value="@author.Id">@author.Name</option>
                   }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                <select asp-for="PublisherId" class="form-control">
                   @foreach(var publisher in ViewBag.Publishers)
                   {
                       <option value="@publisher.Id">@publisher.Name</option>
                   }
                </select>
            </div>
            <div style="display:inline-block" class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <select asp-for="GenreId" class="form-control">
                   @foreach(var genre in ViewBag.Genres)
                   {
                       <option value="@genre.Id">@genre.Name</option>
                   }
                </select>
            </div>
            <div style="display:inline-block">
                    <a asp-action="AddGenre">Create Genre</a>
                    <a asp-action="ListGenres">Delete Genre</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListBooks">Go to Books List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
